<h1>Курсы</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}" alt="{{title}}" />
          </div>
          <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action actions">
            <a href="/courses/{{_id}}" target="_blank" class="blue-text text-darken-2">Открыть курс</a>
            {{#if @root.isAuth}}
              {{#ifeq userId._id @root.userId}}
              <a href="/courses/{{_id}}/edit?allow=true" class="blue-text text-darken-2">Редактировать</a>
              {{/ifeq}}

              <form action="/card/add" method="POST">
                <input type="hidden" name="id" value="{{_id}}" />
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <button type="submit" class="btn btn-primary #1976d2 blue darken-2">Купить</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Курсов пока нет</p>
{{/if}}